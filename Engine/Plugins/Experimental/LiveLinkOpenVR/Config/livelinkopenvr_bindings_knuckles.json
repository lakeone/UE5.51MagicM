{
	"controller_type": "knuckles",
	"name": "LiveLinkOpenVR bindings for Valve Index controller",
	"description": "Bindings for the Live Link OpenVR plugin for the Valve Index controller",
	"bindings": {
		"/actions/LiveLinkGamepadInputDevice": {
			"sources": [
				{
					"path": "/user/hand/left/input/thumbstick",
					"mode": "joystick",
					"inputs": {
						"position": {
							"output": "/actions/LiveLinkGamepadInputDevice/in/LeftAnalog_2D"
						},
						"click": {
							"output": "/actions/LiveLinkGamepadInputDevice/in/LeftThumb"
						}
					}
				},
				{
					"path": "/user/hand/left/input/trigger",
					"mode": "trigger",
					"inputs": {
						"pull": {
							"output": "/actions/LiveLinkGamepadInputDevice/in/LeftTriggerAnalog"
						}
					}
				},
				{
					"path": "/user/hand/left/input/trackpad",
					"mode": "trackpad",
					"inputs": {
						"position": {
							"output": "/actions/LiveLinkGamepadInputDevice/in/SpecialLeft_2D"
						},
						"click": {
							"output": "/actions/LiveLinkGamepadInputDevice/in/SpecialLeft"
						}
					}
				},
				{
					"path": "/user/hand/right/input/thumbstick",
					"mode": "joystick",
					"inputs": {
						"position": {
							"output": "/actions/LiveLinkGamepadInputDevice/in/RightAnalog_2D"
						},
						"click": {
							"output": "/actions/LiveLinkGamepadInputDevice/in/RightThumb"
						}
					}
				},
				{
					"path": "/user/hand/right/input/trigger",
					"mode": "trigger",
					"inputs": {
						"pull": {
							"output": "/actions/LiveLinkGamepadInputDevice/in/RightTriggerAnalog"
						}
					}
				}
			]
		}
	}
}
